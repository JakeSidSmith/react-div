{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "jsx": "react"
  },
  "include": ["src", "examples/src", "tests"]
}
